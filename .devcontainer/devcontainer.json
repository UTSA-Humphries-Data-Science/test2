{
  "name": "Data Science Classroom",
  
  // Use pre-built image from GHCR for fast startup (~2 min vs ~15 min)
  // Falls back to building if image not available
  "image": "ghcr.io/utsa-humphries-data-science/test2:latest",
  
  // Container settings
  "overrideCommand": false,
  "updateRemoteUserUID": false,
  
  // Environment variables
  "containerEnv": {
    "NB_USER": "jovyan",
    "NB_UID": "1000"
  },
  
  // postCreateCommand runs as jovyan (system packages already installed via Dockerfile)
  "postCreateCommand": "bash /workspaces/test2/.devcontainer/conda_setup.sh || true",
  "postStartCommand": "bash /workspaces/test2/.devcontainer/conda_post_start.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "reditorsupport.r",
        "rdebugger.r-debugger",
        "ckolkman.vscode-postgres",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "mechatroner.rainbow-csv",
        "janisdd.vscode-edit-csv",
        "redhat.vscode-yaml",
        "yzhang.markdown-all-in-one",
        "github.copilot",
        "github.copilot-chat",
        "eamodio.gitlens"
      ],
      "settings": {
        // === DISABLE SETTINGS SYNC COMPLETELY ===
        "settingsSync.enable": false,
        
        // === AUTO-UPDATE EXTENSIONS ===
        "extensions.autoUpdate": true,
        "extensions.autoCheckUpdates": true,
        
        // === CORE SETTINGS ===
        "python.defaultInterpreterPath": "/opt/conda/bin/python",
        "python.terminal.activateEnvironment": true,
        "r.rpath": "/opt/conda/bin/R",
        "r.rterm.linux": "/opt/conda/bin/R",
        "r.alwaysUseActiveTerminal": true,
        "r.lsp.promptToInstall": false,
        "r.rterm.option": [],
        "r.bracketedPaste": true,
        "r.lsp.enabled": true,
        "r.debugger.timeouts.startup": 10000,
        "jupyter.jupyterServerType": "local",
        "jupyter.kernels.filter": [],
        "files.associations": {
          "*.rmd": "rmd",
          "*.Rmd": "rmd"
        },
        "editor.rulers": [80, 120],
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "git.enableSmartCommit": true,
        "git.confirmSync": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        
        // === COPILOT RESTRICTIONS FOR CLASSROOM USE ===
        // Disable Agent Mode completely (all variations of the setting)
        "chat.agent.enabled": false,
        "github.copilot.chat.agent.enabled": false,
        "chat.agentMode.enabled": false,
        
        // Disable advanced Copilot features that could be used for cheating
        "github.copilot.editor.enableCodeActions": false,
        "github.copilot.nextEditSuggestions.enabled": false,
        "github.copilot.renameSuggestions.triggerAutomatically": false,
        "github.copilot.chat.agent.runTasks": false,
        "github.copilot.chat.codesearch.enabled": false,
        "github.copilot.chat.edits.enabled": false,
        
        // Disable inline completions if you want students to type code themselves
        // "github.copilot.enable": false,
        
        "sqltools.connections": [
          {
            "name": "Student PostgreSQL",
            "driver": "PostgreSQL",
            "server": "localhost",
            "port": 5432,
            "database": "postgres",
            "username": "student",
            "password": "",
            "connectionTimeout": 0
          }
        ],
        
        // === TERMINAL AND JUPYTER SETTINGS ===
        // Show terminal during setup so students can see progress
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.tabs.showActiveTerminal": "always",
        
        // Set R as preferred kernel for notebooks (avoids "Select Kernel" prompt)
        "notebook.kernelPicker.type": "mru",
        "jupyter.askForKernelRestart": false,
        
        // Disable test discovery (not needed for classroom, prevents error popup)
        "python.testing.pytestEnabled": false,
        "python.testing.unittestEnabled": false,
        "testing.autoRun.mode": "off",
        
        // Welcome page and tour settings
        "workbench.startupEditor": "readme"
      }
    }
  },
  
  // Open terminal automatically to show setup status
  "waitFor": "onCreateCommand",

  "forwardPorts": [8888, 5432, 3000, 8000, 8080],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Lab",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "3000": {
      "label": "Development Server",
      "onAutoForward": "openPreview"
    },
    "8000": {
      "label": "Python Web Server",
      "onAutoForward": "openPreview"
    },
    "8080": {
      "label": "Alternative Web Server",
      "onAutoForward": "openPreview"
    }
  },

  // Use jovyan as the default user after container creation
  "remoteUser": "jovyan",

  "runArgs": [
    "--name=${localWorkspaceFolderBasename}-devcontainer",
    "--hostname=codespace-${localWorkspaceFolderBasename}"
  ],

  "shutdownAction": "stopContainer"
}
